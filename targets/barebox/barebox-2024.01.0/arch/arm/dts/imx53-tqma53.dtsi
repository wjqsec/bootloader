/ {
	chosen {
		environment-emmc {
			compatible = "barebox,environment";
			device-path = &esdhc3, "partname:boot1";
			status = "disabled";
		};
	};
};

&{/memory@70000000} {
	reg = <0x70000000 0x0>; /* Up to 1GiB */
};

&esdhc3 { /* EMMC */
	dsr = <0x100>;
};

&iim {
	barebox,provide-mac-address = <&fec 1 9>;
};
